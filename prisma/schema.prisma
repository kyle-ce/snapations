
generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  name          String?
  image         String?
  captions      Caption[]
  createdAt     DateTime  @default(now())
}

model Caption {
  id            String   @id @default(cuid())
  userId        String
  imageUrl      String
  caption       String
  createdAt     DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id])
}
